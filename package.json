{
  "name": "curr-conv",
  "version": "1.0.0",
  "description": "Convert currency",
  "type": "module",
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/.bin/jest",
    "build": "rollup -c",
    "coverage": "jest --coverage",
    "lint:eslint": "eslint --ext .js . --ignore-path .gitignore",
    "format:eslint": "eslint --ext .js . --fix --ignore-path .gitignore",
    "lint:prettier": "prettier \"**/*.js\" --check --ignore-path .gitignore",
    "format:prettier": "prettier \"**/*.js\" --write --ignore-path .gitignore",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "format": "npm run format:eslint && npm run format:prettier",
    "web": "web-dev-server --node-resolve --watch --app-index view.html --open",
    "serve" : "serve build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/raichuAK/curr-conv.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/raichuAK/curr-conv/issues"
  },
  "homepage": "https://github.com/raichuAK/curr-conv#readme",
  "dependencies": {
    "@babel/cli": "^7.14.5",
    "@babel/core": "^7.14.6",
    "@babel/preset-env": "^7.14.7",
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-node-resolve": "^11.2.1",
    "@web/rollup-plugin-copy": "^0.3.0",
    "eslint": "^7.29.0",
    "eslint-config-airbnb": "^18.2.1",
    "express": "^4.8.1",
    "lint-staged": "^11.0.0",
    "lit-element": "^2.5.1",
    "lit-html": "^1.4.1",
    "nodemon": "^2.0.11",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.56.0",
    "rollup-plugin-html-entry": "^0.3.0",
    "rollup-plugin-minify-html-literals": "^1.2.6",
    "rollup-plugin-summary": "^1.3.0",
    "rollup-plugin-terser": "^7.0.2",
    "serve": "^12.0.0"
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base"
    ],
    "overrides": [
      {
        "files": [
          "*"
        ],
        "rules": {
          "babel/no-unused-expressions": "off"
        }
      }
    ],
    "globals": {
      "express": false
    }
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "avoid"
  },
  "nodemonConfig": {
    "exec": "npm run dev",
    "watch": [
      "routes/*"
    ],
    "ignore": [
      "**/__tests__/**",
      "*.test.js",
      "*.spec.js"
    ]
  },
  "jest": {
    "testEnvironment": "node"
  },
  "devDependencies": {
    "@web/dev-server": "^0.1.18",
    "@web/rollup-plugin-html": "^1.9.1",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.24.0",
    "jest": "^27.0.6",
    "jsdom": "^16.6.0",
    "koa-proxies": "^0.12.1",
    "supertest": "^6.1.3"
  }
}
